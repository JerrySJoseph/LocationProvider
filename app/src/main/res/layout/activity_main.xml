<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start GPS Foreground"
        android:onClick="onStartClickForeground"/>
    <Button
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop GPS Foreground"
        android:onClick="onStopClickForeground"/>
   <Button
       android:layout_marginBottom="30dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Start GPS Background"
       android:onClick="onStartClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop GPS Background"
        android:onClick="onStopClick"/>
</LinearLayout>